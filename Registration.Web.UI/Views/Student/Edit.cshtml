@*@page   "{id:min(1)}"*@
@model Registration.Domain.Students.Student

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            @*<h3>Tələbə</h3>*@
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="number" class="form-label">Tələbənin nömrəsi</label>
                                    <input type="number" class="form-control" id="number" asp-for="Number" placeholder="tələbənin nömrəsi" >
                                </div>
                                <div class="col-md-6">
                                    <label for="fname" class="form-label">Adı</label>
                                    <input type="text" class="form-control" id="fname" asp-for="FirstName" placeholder="tələbənin adı">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="classNumber" class="form-label">Sinif</label>
                                    <input type="number" class="form-control" id="classNumber" asp-for="Class" placeholder="sinif nömrəsi">
                                </div>
                                <div class="col-md-6">
                                    <label for="lname" class="form-label">Soyad</label>
                                    <input type="text" class="form-control" id="lname" asp-for="LastName" placeholder="tələbənin soyadı">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Yadda saxla</button>
                                    <a style="float:right;margin:5px" class="btn btn-danger" asp-area="" asp-controller="Student" asp-action="Index">
                                        <b>Ləğv et</b>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
