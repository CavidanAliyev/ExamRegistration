@model Registration.Domain.Lessons.Lesson

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            <h3>Dərslər</h3>
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="code" class="form-label">Dərsin Kodu</label>
                                    <input type="text" class="form-control" id="code" asp-for="Code" placeholder="dərsin kodu">
                                </div>
                                <div class="col-md-6">
                                    <label for="class" class="form-label">Sinif</label>
                                    <input type="number" class="form-control" id="class" asp-for="Class" placeholder="sinif">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="name" class="form-label">Dərsin adı</label>
                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="dərsin adı">
                                </div>
                                <div class="col-md-4">
                                    <label for="fname" class="form-label">Müəllimin adı</label>
                                    <input type="text" class="form-control" id="fname" asp-for="TeacherFirstName" placeholder="müəllimin adı">
                                </div>
                                <div class="col-md-4">
                                    <label for="lname" class="form-label">Müəllimin soyadı</label>
                                    <input type="text" class="form-control" id="lname" asp-for="TeacherLastName" placeholder="müəllimin soyadı">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Yadda saxla</button>
                                    <a style="float:right;margin:5px" class="nav-link text-dark" asp-area="" asp-controller="Lesson" asp-action="Index">
                                        <b>Siyahıya qayıt</b>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section> 