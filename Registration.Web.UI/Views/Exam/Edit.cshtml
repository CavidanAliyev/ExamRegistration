@model Registration.Domain.Exams.Exam

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            @*<h3>İmtahan</h3>*@
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="code" class="form-label">Dərsin kodu</label>
                                    <input type="text" class="form-control" id="code" asp-for="LessonCode" placeholder="dərsin kodu">
                                </div>
                                <div class="col-md-6">
                                    <label for="sNumber" class="form-label">Tələbənin nömrəsi</label>
                                    <input type="number" class="form-control" id="sNumber" asp-for="StudentNumber" placeholder="tələbə nömrəsi">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="date" class="form-label">İmtahan tarixi</label>
                                    <input type="date" class="form-control" id="date" asp-for="ExamDate">
                                </div>
                                <div class="col-md-6">
                                    <label for="grade" class="form-label">Qiymət</label>
                                    <input type="text" class="form-control" id="lname" asp-for="Grade" placeholder="qiymət">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Yadda saxla</button>
                                    <a style="float:right;margin:5px" class="nav-link text-dark" asp-area="" asp-controller="Exam" asp-action="Index">
                                        <b>Siyahıya qayıt</b>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
